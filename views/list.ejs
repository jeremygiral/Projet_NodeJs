<!DOCTYPE html>

<html>
    <head>
        <title>Mes abonnés</title>
        <style>
            a {text-decoration: none; color: black;}
        </style>

    </head>

    <body>

        <h1>Mes abonnés</h1>

        <table><tr><th>Delete</th><th>First Name</th><th>Last Name</th><th>Adress</th><th>Pseudo</th><th>Email</th></tr>
        <% Abo.forEach(function(abo, index) { %>
            <tr><td><a href="/delete/<%= index %>" onclick="return confirm('Are you sure to delete this follower ?');">✘</a></td><td> <%= abo[0] %></td><td> <%= abo[1] %></td><td> <%= abo[2] %></td><td> <%= abo[3] %></td><td> <%= abo[4] %></td></tr>
        <% }); %>
      </table>
      <a href="/delete/all" onclick="return confirm('Are you sure to delete all followers ?');">All delete</a>

        <form action="/form" method="post">
            <p>
              <label for="newAboFirstName">First Name : </label>
              <input type="text" name="newAboFirstName" id="newAboFirstName" autofocus /></br>

              <label for="newAboLastName">Last Name : </label>
              <input type="text" name="newAboLastName" id="newAboLastName" autofocus /></br>

              <label for="newAboAddress">Address : </label>
              <input type="text" name="newAboAddress" id="newAboAddress" autofocus /></br>

              <label for="newAboPseudo">Pseudo : </label>
              <input type="text" name="newAboPseudo" id="newAboPseudo" autofocus /></br>

              <label for="newAboEmail">Email : </label>
              <input type="email" name="newAboEmail" id="newAboEmail" autofocus /></br>
              <input type="submit" />
            </p>
        </form>

    </body>
</html>
